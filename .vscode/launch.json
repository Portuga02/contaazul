{

    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },

        {
            "name": "Launch localhost",
            "type": "chrome",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/contaazul",
            "pathMappings": [{
                    "url": "http://localhost",
                    "path": "${workspaceFolder}"
                }]
        }
    ]
}
